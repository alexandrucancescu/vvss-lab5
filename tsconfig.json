{
  "compilerOptions": {
    "lib": ["ES2019"],
    "module": "commonjs",
    "target": "ES2019",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators":true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "filesGlob": [
    "./node_modules/@types/*.d.ts"
  ],
  "include": [
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}